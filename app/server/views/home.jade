doctype 5
html
	head
		title Beacon - The New Map-Based Social Media

		meta(name='description', content='Place a Beacon on a map to let your friends know where and what you want to do. Planning spontaneous events has never been so easy!')
		meta(name='keywords', content='map, social media, event, events, beacon, beacons, friends, google maps, organize, plan, beacon events')

		link(rel='stylesheet', href='/style/bootstrap.css')
		link(rel='stylesheet', href='/style/home.css')
		link(href='//api.tiles.mapbox.com/mapbox.js/v1.5.2/mapbox.css', rel='stylesheet')


	body
		div#header
			h2.title Beacon

			div#fb-container.float-right
				img#host-pic.float-left(src='', alt='Profile Picture')
				p#host-name Host Name

			button#logout.btn.btn-xs.float-right Log out

		div#map
			//- div#map-canvas
			//- input#searchTextField(type='text', size='50')

		form#myBeacon
			input(type='text', name='title', placeholder='My Event!', autocomplete='off')
			input.input-long(type='text', name='comment', autocomplete='off', placeholder='Write your Event description here.')
			input.btn.btn-success(type='submit', value='Place Beacon')
		div#group-container
			button#group-button.btn.btn-primary(type='button') Group

		div#groupManager.hidden
			h3.float-left.groupHeaderLeft Group
			h3.float-right.groupHeaderRight Friends

			//- div.ui-widget.ui-helper-clearfix

			ul#group.gallery.ui-helper-reset.ui-helper-clearfix

			ul#friends.ui-widget-content.ui-state-default

			input#groupSearch.search
			input#friendSearch.search

			button#saveGroup.btn.btn-primary(type='button') Save

		ul#beacon-list



		script(type='text/javascript', src='/socket.io/socket.io.js')
		script(type='text/javascript', src='/js/jQuery/jquery-1.10.2.min.js')
		script(src='http://code.jquery.com/ui/1.10.3/jquery-ui.js')
		script(type='text/javascript', src='/js/jQuery/cookie.min.js')

		script(src='//api.tiles.mapbox.com/mapbox.js/v1.5.2/mapbox.js')

		script(src='/js/client-beacon.js')
		script(src='/js/beaconKeeper.js')

		// script(src='https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyD8q1aRi08lwTQg5gFvDJWtpcTkuHgS-zU&sensor=true&libraries=places')
		// script(src='/js/googleMaps.js')

		script(src='/js/mapbox-controller.js')
		script(src='/js/home-controller-fromClient.js')
		script(src='/js/home-controller-fromServer.js')
		script(src='/js/home-view.js')
		script(src='/js/home-html.js')
		script(src='/js/home-group-controller.js')

		script(src='/js/fb.js')