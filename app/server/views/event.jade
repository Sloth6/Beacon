doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, maximum-scale=1, minimum-scale=1")
    title(Let’s — event.description)
    link(href="/style/screen.css", rel="stylesheet", type="text/css", media="screen")
    link(href="/style/print.css", rel="stylesheet", type="text/css", media="print")
    script(src="/scripts/jquery.js")
    script(src="/scripts/jquery.mobile.custom.min.js")
    script
      var user = !{JSON.stringify(user)};
      var accepted = #{accepted};
      var key = "#{event.key}";
    script(src="/scripts/client.js")
  body
    article
      header
        author= creator.name+" invited you"
        h1=event.description
        
        if event.deathTime == null
          section.rsvp
            if accepted
              a(href="#") Leave Event
            else
              a(href="#") Join Event
        else
          section.eventEnded
            h1 Event ending soon

      section.guestlist
        ul#interested
          li
            h1 Attending
          each user in guestList
            li=user.name
        ul#noReply
          li
            h1 No response
          each user in noReply
            li=user.name
      
      div.modal
        h1 Here is amazing copy about downloading our app
        a(href="https://google.com") Get the app